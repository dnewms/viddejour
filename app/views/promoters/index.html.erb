<h1>Listing promoters</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>Link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @promoters.each do |promoter| %>
  <tr>
    <td><%= promoter.amount %></td>
    <td><%= promoter.link %></td>
    <td><%= link_to 'Show', promoter %></td>
    <td><%= link_to 'Edit', edit_promoter_path(promoter) %></td>
    <td><%= link_to 'Destroy', promoter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


